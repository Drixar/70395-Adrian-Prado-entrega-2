<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat Comunitario</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap"
        rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <!-- Main container -->
    <div class="container">

        <div class="row align-items-start">
            <div class="col-chat">

                <!-- msg-header section starts -->
                <div class="msg-header">
                    <div class="container1">
                        <div class="row align-items-start user">
                            <div class="col-5 active">
                                <p>Â¡Hola, <span id="username"></span>! </p>
                            </div>
                            <div class="col-5 typingContainer">
                                <p id="typing"></p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="msg-inbox">
                    <div class="row chats">
                        <!-- Message container -->
                        <div class="msg-page">
                            <p id="messageLogs"></p>
                        </div>
                    </div>
                </div>

                <div class="msg-bottom">
                    <div class="input-group">
                        <input id="chatbox" type="text" class="form-control" placeholder="Escribe un mensaje..." />


                        <button id="sendMessage" class="input-group-text send-icon">

                            <i class="bi bi-send"></i>

                        </button>
                    </div>
                </div>
            </div>

            <div class="col-users ">
                <div class="msg-header">
                    <div class="container1">
                        <div class="active">
                            <p>Usuarios Conectados</p>
                        </div>
                    </div>
                </div>

                <div class="msg-inbox">
                    <div class="row chats">
                        <!-- Message container -->
                        <div class="msg-page" id="userList">
                        </div>
                    </div>
                </div>

                <div class="msg-bottom">
                    <div class="input-group">

                    </div>
                </div>

            </div>
        </div>




    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/index.js"></script>
</body>

</html>